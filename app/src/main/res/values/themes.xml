<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleCalculatorStd" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseBtn">
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:insetLeft">@dimen/keyInsetLeft</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BaseMonitor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@color/standMonitor</item>
    </style>
    <style name="BaseBtn.MemoryFnk">
        <item name="android:textSize">@dimen/memoryKeyLabelTextSize</item>
        <item name="android:backgroundTint">@color/wetAsphalt</item>
    </style>
    <style name="BaseBtn.BasicMathOper">
        <item name="android:backgroundTint">@color/ebonyPink</item>
    </style>
    <style name="BaseBtn.AdditionMathOper">
        <item name="android:backgroundTint">@color/wetAsphalt</item>
    </style>
    <style name="BaseBtn.ResultMathOper">
        <item name="android:backgroundTint">@color/peru</item>
    </style>
    <style name="BaseBtn.ResetAndBS">
        <item name="android:backgroundTint">@color/brownBurgundy</item>
    </style>
    <style name="BaseBtn.Num">
        <item name="android:textColor">@color/numKeyLabel</item>
        <item name="android:backgroundTint">@color/backgroundTintNumKey</item>
    </style>
</resources>